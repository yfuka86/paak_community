<%= form_for(@period, html:{class: 'form-normal'}) do |f| %>
  <% if @period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
      <% @period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label '名前' %><br>
    <%= f.text_field :explanation, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label '期' %><br>
    <%= f.number_field :number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label '会員種別' %><br>
    <%= f.select :code, Period.codes.keys.to_a, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit '保存', class: 'btn btn-primary' %>
  </div>
<% end %>
