<h1 class='title'>プロジェクト一覧</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Period</th>
      <th>Url</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.period.try(:explanation) %></td>
        <td><%= project.url %></td>
        <td><%= project.summary %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しくプロジェクトを作る', new_project_path, class: 'btn btn-default' %>
