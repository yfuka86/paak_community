<table class='table'>
  <thead>
    <tr>
      <th>名前</th>
      <th>Facebook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <%= link_to user.facebook_url do %>
            <span class='fa fa-facebook' />
          <% end %>
        </td>
        <td><%= link_to '詳細を見る', user %></td>
        <% if current_user.is_admin %>
          <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当にこのユーザーを削除してもよろしいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>